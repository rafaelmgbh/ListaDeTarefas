<tr>
  <td>
    <span class='text-<%= task.color %>>'> <%= task.symbol %></span>
    <% if task.done? %>
    <s class='text-muted'><%= task.description %></s>
    <% else %>
    <%= task.description %>
    <% end %>
  </td>
  <td><%= task.due_date%></td>
  <td>
    <%= link_to 'Editar', edit_task_path(task), class: 'btn btn-secondary btn-sm' %>
    <%= link_to 'Excluir', task_path(task), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm' %>
  </td>
</tr>